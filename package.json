{
  "name": "@storefront/template",
  "version": "0.0.0-development",
  "description": "StoreFront template component",
  "keywords": [
    "storefront",
    "storefront-component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/groupby/storefront-template.git"
  },
  "bugs": {
    "url": "https://github.com/groupby/storefront-template/issues"
  },
  "homepage": "https://github.com/groupby/storefront-template#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "start-runner -p re-start/presets/typescript",
    "dev": "npm start dev",
    "test": "npm start test",
    "tdd": "npm start tdd",
    "prepush": "npm start prepush",
    "prepublish": "npm start build"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "restart": {
      "watchFiles": "src/**/*.{ts,html,css}",
      "copyFiles": "src/**/*.{html,css}",
      "testFiles": [
        "test/bootstrap.ts",
        "test/**/*.ts"
      ],
      "releaseOpts": {
        "public": true
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/node": "^7.0.21",
    "@types/sinon": "^2.2.2",
    "babel-preset-env": "^1.4.0",
    "chai": "^3.5.0",
    "condition-circle": "^1.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "mocha-suite": "^1.0.9",
    "mock-require": "^2.0.2",
    "re-start": "^1.13.0",
    "sinon": "^2.2.0",
    "start-babel-cli": "^4.0.1",
    "tslint": "^5.2.0",
    "tslint-config-groupby": "^1.0.0",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "@storefront/core": "dev"
  }
}
